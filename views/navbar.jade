nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')

  div.navbar-header
    a.navbar-brand(href='#') eCourt

  // path
  div.collapse.navbar-collapse.navbar-ex1-collapse
    ul.nav.navbar-nav
      li
        p.navbar-text /

      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown')= currentCategory 
          b.caret
        ul.dropdown-menu(role='menu')
          each category in categories
            li
              a(href='/categories/' + category.title + '/')= category.title
      li
        p.navbar-text /

      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown')= currentEvent
          b.caret
        ul.dropdown-menu(role='menu')
          each event in events
            li
              a(href='/categories/' + currentCategory + '/events/' + event.title + '/')= event.title

    // search bar
    form.navbar-form.navbar-right(role='search')
      div.form-group
        input.form-control(type='text', placeholder='Search')
      button.btn.btn-default(type='submit') Submit

    // support
    ui.nav.navbar-nav.navbar-right
      li
        a(href='#groups') 團體
      li
        a(href='#laws') 法律
      li
        a(href='#lawsuits') 判決
      li
        a(href='#actions') 行動
